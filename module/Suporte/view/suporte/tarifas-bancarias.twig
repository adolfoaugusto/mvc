{%  extends 'templates/indexs/index.twig' %}


{% block titulo_conteudo %}
    <a class="fas fa-university"></a>
    Tarifas Bancárias cadastradas
{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-"></i> {{ titulo }}
                </div>
                <div class="card-body">
                    <table class="dataTable table table-hover" id="ListarTarifasBancarias">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>DESCRIÇÃO</th>
                            <th class="nosort">AÇÕES</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script>
        var $table = Datatables.carregarTabela({
            id:'ListarTarifasBancarias',
            url:'/suporte/tarifas-bancarias/listar',
            colunas:[
                'id',
                'descricao',
                'acao'
            ],
            buttons:[
                'pdf','csv'
            ],
            ordem:[0,'asc'],
        });

        $table.draw();

        Crud.deletar('.acao-tarifas-bancarias-deletar',$table);
    </script>
{% endblock %}