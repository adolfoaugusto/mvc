{%  extends 'templates/indexs/index.twig' %}


{% block titulo_conteudo %}
    <a class="fas fa-university"></a>
    Listar bancos cadastrados na Central
{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-"></i> {{ titulo }}
                </div>
                <div class="card-body">
                    <table class="dataTable table table-hover" id="ListarBancos">
                        <thead>
                        <tr>
                            <th>NI</th>
                            <th>DATA ADESAO</th>
                            <th>DIA FECHAMENTO</th>
                            <th>PERIODICIDADE</th>
                            <th class="nosort">AÇÕES</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script>
        var $table = Datatables.carregarTabela({
            id:'ListarBancos',
            url:'/suporte/clientes-faturados/listar',
            colunas:[
                'ni',
                'data_adesao',
                'dia_fechamento_fatura',
                'periodicidade_fatura',
                'acao'
            ],
            buttons:[
                'pdf','csv'
            ]
        });

        $table.draw();

        Crud.deletar('.acao-clientes-faturados-deletar',$table);
    </script>
{% endblock %}