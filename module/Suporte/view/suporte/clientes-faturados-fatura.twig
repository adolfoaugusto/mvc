    <script>

        $(document).on('click', '#pedidos-item', function (event) {

            event.preventDefault();

            let start = $("#start").val();
            let end   = $("#end").val();
            let ni    = '{{ ni }}';

            if (start === '' || end === '') {
                return;
            }

            $(".loading").show();

            $.ajax({
                url: '/suporte/clientes-faturados/buscar-pedidos',
                type: 'POST',
                data: {
                    ni: ni,
                    start: start,
                    end: end
                },
                success: function (response) {
                    $(".loading").hide();
                    $("#list-itens").html("");
                    for (let i = 0; i < response.data.length; i++) {
                        $("#list-itens").append("" +
                            "<tr>"+
                            "<td>"+response.data[i]['id']+"</td>"+
                            "<td>"+response.data[i]['data']+"</td>"+
                            "<td>"+"<a href='#' id='"+response.data[i]['id']+"' class=\"btn btn-sm btn-primary pedido-item\" data-toggle='modal' data-target='#modal-pedidos'><i class=\"fas fa-eye\"></i></a></td>" +
                            "</tr>"
                        );
                    }
                }
            });
        });

        $(document).on('click', '.pedido-item', function() {
            let id = $(this).attr('id');
            $(".loading").show();
            $("#table-itens-detalhes").hide(1000);
            $("#table-itens").show(1000);

            $.ajax({
                url: '/suporte/clientes-faturados/buscar-pedidos/itens',
                type: 'POST',
                data: {
                    id: id
                },
                success: function (response) {
                    $(".loading").hide();
                    $("#pedido-body").html('');
                    // let ids = [];
                    for (let i = 0; i < response.data.length; i++) {
                        // ids.push(response.data[i]['pedidoId']);
                        $("#pedido-body").append(
                            '<tr>'
                                +'<td>'+response.data[i]['id']+'</td>'
                                +'<td>'+response.data[i]['protocolo']+'</td>'
                                +'<td>'+response.data[i]['descricao']+'</td>'
                                +'<td class="text-success" ">R$: '+response.data[i]['valor']+'</td>'
                                +'<td><button class="btn btn-primary detalhe-item-pedido" data-pedido-item="'+response.data[i]['id']+'" id="'+response.data[i]['pedidoId']+'"><i class="fas fa-eye"></i></button></td>'+
                            '</tr>'
                        );
                    }
                    // console.log(ids);
                    // $.each(ids, function (chave, valor) {
                    //     $.ajax({
                    //         url: '/suporte/clientes-faturados/buscar-custos/pedidos-itens',
                    //         type: 'POST',
                    //         data: {
                    //             id: valor
                    //         },
                    //         success: function (response) {
                    //             console.log(response)
                    //         }
                    //     });
                    // });
                }
            });
        });

        $(document).on('click', '.detalhe-item-pedido', function () {

            let id = $(this).attr('id');
            let pedido_item_id = $(this).attr('data-pedido-item');

            $("#table-itens-detalhes").show(1000);
            $("#table-itens").hide(1000);

            $.ajax({
                url: '/suporte/clientes-faturados/buscar-custos/pedidos-itens',
                type: 'POST',
                data: {
                    id: id,
                    pedido_id: pedido_item_id
                },
                success: function (response) {
                    for (let i = 0; i < response.data.length; i++) {
                        $("#custo-body").html('').append("" +
                            "<tr>"+
                            "<td>"+response.data[i]['id']+"</td>"+
                            "<td>"+response.data[i]['descricao']+"</td>"+
                            "<td class='text-success'>R$: "+response.data[i]['valor']+"</td>" +
                            "</tr>"
                        );
                    }
                }
            });

            $("#table-itens").hide(1000, function () {
            });

            $("#table-itens-detalhes").show(1000);
        });

        $(document).on('click', '#btn-list-detail', function (event) {
           $("#table-itens-detalhes").hide(1000);
           $("#table-itens").show(1000);
        });

    </script>

    <script>
        $(document).on('click', '#faturar', function () {

            let dates = {
                start: $("#start").val(),
                end: $("#end").val(),
                ni: {{ ni }}
            };

            if (dates.start === '' || dates.end === '') {
                return;
            }

            $.ajax({
                url: '/suporte/clientes-faturados/gerar-fatura',
                type: 'POST',
                data: {dates},
                success: function (response) {
                    $("#modal-fatura-body").html('').append(
                        "<div class='embed-responsive embed-responsive-16by9'>"+
                            "<iframe class='embed-responsive-item' src='data:application/pdf;base64,"+response+"'></iframe>"+
                        "</div>"
                    );
                    $("#modal-fatura").modal();
                },
                error: function (response) {
                    swal({
                        type: 'info',
                        title: response.responseJSON.message,
                        text: response.responseJSON.errors[0]+' '+dates.start+' à '+dates.end,
                        animation: false,
                        customClass: 'animated shake'
                    });

                    return false;
                }
            });
        });
    </script>
{% endblock %}