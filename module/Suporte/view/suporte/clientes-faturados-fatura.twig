{%  extends 'templates/indexs/index.twig' %}
{% block titulo %}Clientes Faturado - Fatura{% endblock %}
{% block modulo %}Clientes Faturados{% endblock %}
{% block modulo_titulo %}Detalhes da Fatura{% endblock %}
{% block conteudo %}
    {% block styles %}
        <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css">
    {% endblock %}
    <div class="modal fade" tabindex="-1" role="dialog" id="modal-pedidos">
        <div class="modal-dialog modal-lg" role="alertdialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title"><i class="fas fa-cart-arrow-down"></i> Lista de Itens do Pedido <span id="pedido-titulo"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="loading text-center" style="display: none; position: absolute; z-index: 1231231231;">
                        <p>Carregando, aguarde !</p>
                        <i class="fas fa-spinner fa-spin fa-3x"></i>
                    </div>

                    <div class=" table-responsive" style="display: none;" id="table-itens-detalhes">
                        <button class="btn btn-primary" id="btn-list-detail"><i class="fas fa-arrow-left"></i> Voltar a listagem de pedidos</button>
                        <table class="table text-center" id="itens">
                            <thead class="bg-primary text-light">
                            <tr>
                                <th>Id</th>
                                <th>Descrição</th>
                                <th>Valor</th>
                            </tr>
                            </thead>
                            <tbody id="custo-body">

                            </tbody>
                        </table>
                    </div>

                    <div class=" table-responsive" id="table-itens">
                        <table class="table text-center">
                            <thead class="bg-primary text-light">
                            <tr>
                                <th>Id</th>
                                <th>Protocolo</th>
                                <th>Descrição do Serviço</th>
                                <th>Custa Serviço</th>
                                <th>Custo adicional Pedido</th>
                            </tr>
                            </thead>
                            <tbody id="pedido-body">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    {#<button type="button" class="btn btn-primary">asa</button>#}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" id="modal-fatura">
        <div class="modal-dialog modal-lg" role="alertdialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title"><i class="fas fa-cart-arrow-down"></i> Fatura</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-fatura-body">
                    <div class="loading text-center" style="display: none; position: absolute; z-index: 1231231231;">
                        <p>Carregando, aguarde !</p>
                        <i class="fas fa-spinner fa-spin fa-3x"></i>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    {#<button type="button" class="btn btn-primary">asa</button>#}
                </div>
            </div>
        </div>
    </div>
    <style>
        .loading {
            width: 100%;
            height: 100%;
            color: #063346;
        }
    </style>
    {% if not errors %}
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header bg-primary text-light">
                        <h5><i class="fas fa-filter"></i> Filtro</h5>
                    </div>
                    <div class="card-body">
                        <form action="/suporte/clientes-faturados/{{ ni }}/fatura" method="post">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Selecione um período</span>
                                </div>
                                <input type="date" name="start" id="start" class="form-control">
                                <input type="date" name="end" id="end" class="form-control">
                                <button id="pedidos-item" type="button" class="btn btn-primary"><i class="fas fa-search-plus"></i> Filtrar</button>
                            </div>
                        </form>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary text-light">
                                <h5><i class="fa fa-shopping-cart"></i> Pedidos</h5>
                            </div>
                            <div class="card-body">
                                <div class="loading text-center" style="display: none; position: absolute; z-index: 1231231231;">
                                    <p>Carregando, aguarde !</p>
                                    <i class="fas fa-spinner fa-spin fa-3x"></i>
                                </div>
                                <div class="table-responsive">
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th>Id Pedido</th>
                                                <th>Data</th>
                                                <th>Itens Pedido</th>
                                            </tr>
                                        </thead>
                                        <tbody id="list-itens">

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button class="btn btn-primary btn-lg" id="faturar"><i class="far fa-file-alt"></i> Faturar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card">
                    <div class="card-header bg-primary text-light">
                        <h5><i class="fa fa-user"></i> Dados de cadastro</h5>
                    </div>
                    <div class="card-body">
                        <h4>Nome: </h4> {{ cliente.getNi().nome }}
                        <h4>Data adesão: </h4> {{ cliente.getDataAdesao()|date('d/m/Y H:m:s') }}
                        <h4>Periodicidade Fatura: </h4> {{ cliente.getPeriodicidadeFatura() }}
                        <h4>Dia Fechamento Fatura: </h4> {{ cliente.getDiaFechamentoFatura() }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h1 class="text-center text-danger"><i class="fas fa-cart-arrow-down"></i></h1>
        <h3 class="alert alert-danger text-center">{{ errors }}</h3>
        <p class="text-center">
            <a href="/suporte/clientes-faturados">
                <button class="btn btn-primary"><i class="fas fa-arrow-left"></i> Voltar a listagem anterior</button>
            </a>
        </p>
    {% endif %}

{% endblock %}

