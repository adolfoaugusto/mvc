{%  extends 'templates/indexs/index.twig' %}


{% block titulo_conteudo %}
    <a class="fa fa-users"></a>
     Lista de pessoas cadastradas no sistema
{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-"></i> {{ titulo }}
                </div>
                <div class="card-body">
                  <table class="dataTable table table-hover" id="listarPessoas">
                      <thead>
                          <tr>
                              <th>CPF</th>
                              <th>NOME</th>
                              <th class="nosort">Ações</th>
                          </tr>
                      </thead>
                      <tbody>

                      </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script>
      var $table = Datatables.carregarTabela({
          id:'listarPessoas',
          url:'/suporte/pessoa/listar',
          colunas:[
              'ni',
              'nome',
              'acao'
          ],
          ordem:[1,'desc'],
          buttons:[
              'pdf','csv'
          ]

      });



      $table.draw();

      Crud.deletar('.acao-pessoa-deletar',$table);

    </script>
{% endblock %}