<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block titulo %} Home {% endblock %} | CentralRTDPJ Brasil </title>
    <link href="/plugins/bootstrap4/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="/img/favicon.png" rel="icon"/>
    <link href="/plugins/components-font-awesome/css/fontawesome-all.min.css" rel="stylesheet"/>
    <link href="/plugins/select2/dist/css/select2.min.css" rel="stylesheet"/>
    <link href="/src/css/select2-bootstrap-4.min.css" rel="stylesheet"/>
    <link href="/plugins/animate.css/animate.min.css" rel="stylesheet"/>
    <link href="/src/css/fontes.css" rel="stylesheet"/>
    <link href="/plugins/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet"/>
    <link href="/src/css/app.css" rel="stylesheet"/>
    {% block styles %}{%  endblock %}
</head>
<body>

<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-primary">

        <button type="button" id="sidebarCollapse" class="btn btn-primary">
            <i class="fa fa-align-left"></i>
        </button>

        <div class="sidebar-header text-center bg-primary">
            <a class="text-light logo-central" href="/" title="Ir pra home">

            </a>
        </div>

        {#
            BLOCK PADRÂO PARA SUPORTE/FINANCEIRO
        #}
        {%  block menu %}
        <ul class="list-unstyled components">
                 <li>
                    <a href="#LinkFinanceiro" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-dollar-sign text-light"></i> Financeiro
                    </a>
                    {% include "templates/menu/financeiro_menu.twig" %}
                </li>
                <li>
                    <a href="#LinkSuporte" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-inbox text-light"></i> Suporte
                    </a>
                    {%  include "templates/menu/suporte_menu.twig" %}
                </li>
        </ul>
        {%  endblock %}
    </nav>

    <section id="content" class="container-fluid">

        <div class="row" id="header">
            <div class="col-sm align-self-center">
                <h1 class="h1 text-center text-md-left text-info">{% block modulo %} {% endblock %} </h1>
                <h5>{% block modulo_titulo %} {% endblock %}</h5>
            </div>
            <div class="col-sm align-self-center">

                <div id="header-noticifacoes">

                    {#{% if notificacoes | length  > 0 %}#}
                        <a href="#painelNotificacoes">
                                <span class="icone-notificacoes">
                                    <i class="fas fa-bell text-info"></i>

                                    <span class="badge badge-warning animated pulse ">{{ notificacoes | length }}</span>

                                </span>
                        </a>
                    {#{% endif %}#}

                    <div id="modalNotificacoes">
                        <div id="painelNotificacoes">

                            <div class="list row">
                                <!--<div class="col-sm-auto list-icon pr-0">
                                        <i class="fa fa-envelope fa-3x"></i>
                                </div>-->
                                <div class="col-sm p-0">
                                    <h3 class="h6 text-primary m-0">Títulos e documentos</h3>
                                    <p class="text-secondary m-0">
                                        A sua solicitação feita em 10/03 foi atendida.<br>
                                        <a href="http://google.com" class="saiba-mais text-secondary">saiba mais</a>
                                    </p>
                                    <span class="text-secondary m-0">Há 5 horas</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-sm align-self-center">
                <div id="painelUsuario">
                    <ul class="list-unstyled components">
                        <li class="row bg-primary">
                            <a href="#painelLinkUsuario" data-toggle="collapse" aria-expanded="false"
                               class="dropdown-toggle">
                                <i class="fa fa-user-circle fa-2x text-white"></i> {% block nome_usuario %}Raimundo{%  endblock %}
                            </a>
                            <ul class="collapse list-unstyled bg-primary" id="painelLinkUsuario">
                                <li>
                                    <a href="">Meu Perfil</a>
                                </li>
                                <li>
                                    <a href="">Minhas Configurações</a>
                                </li>
                                <li>
                                    <a href="">Meu Extrato de Créditos</a>
                                </li>
                                <li>
                                    <a href="">Alterar Senha</a>
                                </li>
                                <li>
                                    <a href="">sair</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm">
                <div id="painelCreditos">
                    <div class="row">
                        <div class="col-lg-8 texto-credito align-self-center bg-info ">
                            <p class="text-white-50">R$ {% block total_creditos %}0,00{%  endblock %} em créditos</p>
                            <a href="">Comprar Créditos</a>
                        </div>
                        <div class="col cart-credito  text-center bg-primary">
                            <i class="fa fa-shopping-cart fa-2x text-light"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row m-0">
            <div class="col">
                {{ breadcrumbs|raw }}
            </div>
        </div>


        <div id="header-conteudo">

            <div class="row ">
                <div class="col-sm align-self-md-auto">
                    <h2 class="h4 text-center text-sm-left text-info mb-4">
                        {% block titulo_conteudo %} {% endblock %}
                    </h2>
                </div>

                {% block botoes_conteudo_topo_direito %}

                {% endblock %}

            </div>
        </div>

        <div id="conteudo">

            {% block conteudo %}

            {% endblock %}

        </div>

    </section>

</div>

    {#
        segue o mesmo padrão definio no Gruntfile
        caso adicione mais uma biblioteca, é necessário
        adicionar no GruntFile o caminho do novo plugin
    #}


    <script src="/plugins/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="/plugins/datatables.net/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="/plugins/bootstrap4/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="/plugins/sweetalert2/dist/sweetalert2.all.js" type="text/javascript"></script>
    <script src="/plugins/jquery-mask-plugin/dist/jquery.mask.min.js" type="text/javascript"></script>
    <script src="/plugins/select2/dist/js/select2.full.min.js" type="text/javascript"></script>
    <script src="/plugins/select2/dist/js/i18n/pt-BR.js" type="text/javascript"></script>
    <script src="/src/js/datatables.js" type="text/javascript"></script>
    <script src="/plugins/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/plugins/jquery-validation/dist/additional-methods.min.js" type="text/javascript"></script>
    <script src="/src/js/metodos_validacao/CpfCnpj.js" type="text/javascript"></script>
    <script src="/src/js/metodos_validacao/validarNome.js" type="text/javascript"></script>
    <script src="/src/js/metodos_validacao/uppercase.js" type="text/javascript"></script>
    <script src="/plugins/jquery-validation/dist/localization/messages_pt_BR.js" type="text/javascript"></script>
    <script src="/src/js/currentMenu.js" type="text/javascript"></script>
    <script src="/src/js/ckeditor/ckeditor.js"></script>
    <script src="/src/js/ckeditor/translations/pt-br.js"></script>
    <script src="/src/js/Editor.js"></script>
    <script src="/src/js/app.js" type="text/javascript"></script>
    <script src="/src/js/cruds/Crud.js" type="text/javascript"></script>
    <script src="/src/js/cruds/Financeiro.js" type="text/javascript"></script>
    <script src="/src/js/cruds/CanalVendaParticipacao.js" type="text/javascript"></script>
    <script src="/src/js/cruds/CrudPersonalizado.js" type="text/javascript"></script>

<!-- outros scripts externos -->
{% block scripts %}

{% endblock %}
</body>
</html>